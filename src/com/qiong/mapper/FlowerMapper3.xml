<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--xml命名空间。必须是接口的全路径，实现与接口的链接-->
<mapper namespace="com.qiong.mapper.FlowerMapper3">


    <select id="selectMore" resultType="flower">

        select * from flower where 1=1

        <if test="param1!=null and param1!=''">
            and name =#{param1}
        </if>

        <if test="param2!=null and param2!=''">
            and sex =#{param2}
        </if>

    </select>

    <!--where标签，自动添加where关键字，去掉第一个and-->
    <select id="selectMore2" resultType="flower">

        select * from flower

        <where>
            <if test="param1!=null and param1!=''">
                and name =#{param1}
            </if>

            <if test="param2!=null and param2!=''">
                and sex =#{param2}
            </if>
        </where>

    </select>

    <!--choose标签-->
    <select id="selectMore3" resultType="flower">

        select * from flower

        <where>
            <choose>
                <when test="param1!=null and param1!=''">
                    name=#{param1}
                </when>
                <when test="param2!=null and param2!=''">
                    and sex=#{param2}
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
        </where>

    </select>
    


</mapper>